%=== Заголовок: \ltitle{НАЗВАНИЕ СТАТЬИ}{Инициалы и Фамилии авторов}
\def\ltitle#1#2{ %\pagebreak
\begin{center}\bf
#1
\end{center}
\begin{center}\bf
#2
\end{center}
}
%=== Абстракт
\def\oabstract#1{{\narrower{#1}}\bigskip\par}
%=== Среда для задания теорем, лемм, утверждений, следствий и т.д.:
%     \begin{theorem}{Теормема n.} ...\end{theorem}
\newenvironment{theorem}[1]{\endgraf  {\bf #1}\em}{ \endgraf  }
\def\proof{{\bf Доказательство. }}
%=== Список литературы:
%=    \begin{refdf}{число названий} ссылки\end{refdf}
\newbox\boxno%
\newenvironment{refdf}[2]{\endgraf
\par\bigskip\par
{\footnotesize СПИСОК \ ЛИТЕРАТУРЫ} \setbox\boxno=\hbox{#1.~\null}
\bigskip\par
#2 }{ \endgraf  }
%= название одной статьи:
% \wref{порядковый номер названия}{автор} название
\def\wref#1#2{\par\hangindent=\wd\boxno \noindent
\hbox to \wd\boxno{#1.~}{\it #2}}
